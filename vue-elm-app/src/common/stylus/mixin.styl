border-1px($color)
    position relative
    &:after
        display block
        position absolute
        bottom 0
        left 0
        width 100%
        border-top 1px solid $color
        content ''

border-none()
    &:after
        display none

bg-image($url)
    //   2倍的retima屏
    background-image url($url+"@2x.png")  
    // 2倍的retima屏 使用于ipone7 plus等
    @media (-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
        background-image url($url+"@3x.png")